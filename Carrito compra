class Producto:
   def __init__(self, nombre, precio, cantidad=1):
       self.nombre = nombre
       self.precio = precio
       self.cantidad = cantidad

class Carrito:
   def __init__(self):
      self.productos = []  
     
   def agregar_producto(self, producto):
        self.productos.append(producto)
        print(f"Producto {producto.nombre} agregado al carrito.")

   def mostrar_carrito(self):
        print("Productos en el carrito:")
        for producto in self.productos:
            print(f"{producto.nombre} ({producto.cantidad} ud): {producto.precio * producto.cantidad}€")
          
   def calcular_total(self):
        total = sum(producto.precio * producto.cantidad for producto in self.productos)
        return f"Total en el carrito: {total}€"

# Crear productos
producto1 = Producto("Camiseta", 15.99)
producto1.cantidad = 2
producto2 = Producto("Pantalón", 25.50)
producto3 = Producto("Zapatillas", 45.00)

# Crear carrito y agregar productos
carrito = Carrito()  
carrito.agregar_producto(producto1)
carrito.agregar_producto(producto2)  
carrito.agregar_producto(producto3)
carrito.mostrar_carrito()
print(carrito.calcular_total())
